{
    "name": "Hybrid Digital Twin Seismic RC",
    "image": "mcr.microsoft.com/devcontainers/python:3.10",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff",
                "tamasfe.even-better-toml",
                "njpwerner.autodocstring"
            ]
        }
    },
    "postCreateCommand": "pip install -r requirements.txt && pip install -e . && git config --global --add safe.directory ${containerWorkspaceFolder}"
}
